dynamic_macro_1: dynamic_macro_1 {
	compatible = "zmk,behavior-dynamic-macro";
	label = "dynamic_macro_1";
	wait-ms = <10>;
	#binding-cells = <1>;
};



alt_tab: alt_tab {
	compatible = "zmk,behavior-macro";
	label = "alt_tab";
	#binding-cells = <0>;
	bindings
		= <&macro_press &kp LALT>
		, <&macro_tap &kp TAB>
		, <&macro_release &kp LALT>
	;
};



td_nav: td_nav {
	compatible = "zmk,behavior-tap-dance";
	label = "td_nav";
	#binding-cells = <0>;
	tapping-term-ms = <200>;
	bindings = <&sl NAV>, <&tog NAV>;
};



td_shift: td_shift {
	compatible = "zmk,behavior-tap-dance";
	label = "td_shift";
	#binding-cells = <0>;
	tapping-term-ms = <200>;
	bindings = <&sk RIGHT_SHIFT>, <&caps_word>;
};

bksp_del: bksp_del {
	compatible = "zmk,behavior-mod-morph";
	label = "Backspace Delete";
	#binding-cells = <0>;
	bindings = <&kp BACKSPACE>, <&kp DELETE>;
	mods = <(MOD_LSFT|MOD_RSFT)>;
};



//  dot -> space -> sticky shift
dot_spc: dot_spc {
	compatible = "zmk,behavior-macro";
	label = "dot_spc";
	#binding-cells = <0>;
	bindings = <&kp OPT7_DOT &kp SPACE &sk LSHFT>;
};

td_dot: td_dot {
	compatible = "zmk,behavior-tap-dance";
	label = "td_dot";
	#binding-cells = <0>;
	tapping-term-ms = <200>;
	bindings = <&kp OPT7_DOT>, <&dot_spc>;
};