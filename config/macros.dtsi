ZMK_BEHAVIOR(CTRL_SHIFT, macro,
    wait-ms = <100>;
    tap-ms = <5>;
	bindings = <&macro_press &kp LSHFT &kp LCTL>
    	     , <&macro_pause_for_release>
    		 , <&macro_release &kp LSHFT &kp LCTL>;
)



