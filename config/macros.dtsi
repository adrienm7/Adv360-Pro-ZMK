zed_em_kay: zed_em_kay {
	compatible = "zmk,behavior-macro";
	label = "ZM_zed_em_kay";
	#binding-cells = <0>;
	bindings
		= <&macro_press &kp LSHFT>
		, <&macro_tap &kp Z &kp M &kp K>
		, <&macro_release &kp LSHFT>
	;
};



//  dot -> space -> sticky shift
DOT_SPC: dot_spc {
	compatible = "zmk,behavior-macro";
	label = "dot_spc";
	#binding-cells = <0>;
	bindings = <&kp DOT &kp SPACE &sk LSHFT>;
};



ALTGR_ENTER: altgr_enter {
	compatible = "zmk,behavior-macro";
	label = "altgr_enter";
	#binding-cells = <0>;
	bindings = <&macro_press 	&kp RALT>
			 , <&macro_tap 	  	&kp ENTER>
			 , <&macro_release 	&kp RALT>
	;
};

ALTGR_DEL: altgr_del {
	compatible = "zmk,behavior-macro";
	label = "altgr_del";
	#binding-cells = <0>;
	bindings
		= <&macro_press 	&kp RALT>
		, <&macro_tap 	  	&kp DELETE>
		, <&macro_release 	&kp RALT>
	;
};



CTRL_SHIFT: ctrl_shift {
	label = "Ctrl + Shift";
	compatible = "zmk,behavior-macro";
	#binding-cells = <0>;
	wait-ms = <0>;
	bindings = <&macro_press &kp LSHFT &kp LCTL>
    	     , <&macro_pause_for_release>
    		 , <&macro_release &kp LSHFT &kp LCTL>;
};



